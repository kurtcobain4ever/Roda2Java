<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!--主布局-->
    <definition name="layout" template="/WEB-INF/jsp/layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp"/>
        <put-attribute name="main" />
    </definition>

    <!--主页-->
    <definition name="home" extends="layout">
        <put-attribute name="main" value="/WEB-INF/jsp/home.jsp"/>
    </definition>

    <!--职业-->
    <definition name="profession" extends="layout">
        <put-attribute name="main" value="/WEB-INF/jsp/profession.jsp"/>
    </definition>

    <!--登录-->
    <definition name="login" extends="layout">
        <put-attribute name="main" value="/WEB-INF/jsp/login.jsp"/>
    </definition>

    <!--注册-->
    <definition name="register" extends="layout">
        <put-attribute name="main" value="/WEB-INF/jsp/register.jsp"/>
    </definition>

    <!--结果-->
    <definition name="result" extends="layout">
        <put-attribute name="main" value="/WEB-INF/jsp/result.jsp"/>
    </definition>
</tiles-definitions>